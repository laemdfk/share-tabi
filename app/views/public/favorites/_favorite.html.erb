<% if post.favorited_by?(current_end_user) %>
  <%= link_to public_post_favorites_path(post), method: :delete,remote: true do %>
   <i class="fas fa-heart"aria-hidden="true" style="color: red;"></i><%= post.favorites.count %>いいね
  <% end %>
 <% else %>
  <%= link_to public_post_favorites_path(post), method: :post,remote: true do %>
   <i class="fas fa-heart"aria-hidden="true"></i><%= post.favorites.count %>いいね
  <% end %>
<% end %>


